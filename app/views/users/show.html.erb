<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <% if @user.id == current_user.id %>
          <h2 class="username"><%= current_user.username %></h2>
          <a class="edit-profile">
            <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
              <button>Edit Profile</button>
            </a>
        <% else %>
          <a class="edit-profile" href="">
            <% if current_user.subscribed?(@user) %>
              <%= link_to "Unsubscribe", unsubscribe_path(@user), method: :delete, form_class: 'btn btn-danger' %>

            <% else %>
              <%= link_to "Subscribe", subscribe_path(@user), method: :put, form_class: 'btn btn-primary' %>
            <% end %>
        <%# byebug %>
        <% end %>
        </a>
      </div>
      <ul class="posts">

        <li><span><%= @posts.count %></span> posts</li>

        <li><span>195</span> followers</li>
        <li><span>345</span> following</li>
      </ul>
      <h2 class="name"><%= current_user.name %></h2>
      <%= link_to current_user.website, current_user.website, class: 'website' %>
    </div>
  </div>
</div>
<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>


  <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>
<div class="user-images">
  <% @posts.each do |post| %>
    <div class="wrapper">
      <%= link_to post_path(post) do %>
        <%= image_tag post.image %>
      <% end %>
    </div>
  <% end %>
</div>